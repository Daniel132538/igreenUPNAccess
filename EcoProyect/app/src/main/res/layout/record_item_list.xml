<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="40dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:gravity="center"
        android:background="@drawable/card_view_login">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recordImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/green"
                android:src="@drawable/ic_launcher_background" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:id="@+id/idViaje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Idviaje : 34"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/fecha_viaje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Fecha : 20-12-2022"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/puntos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Puntos : 2000"
                        android:textSize="18dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/caracteristicasLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/green"
                app:boxStrokeColor="@color/green"
                app:placeholderTextColor="@color/green"
                android:hint="@string/origen"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:visibility="visible">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/origen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="300"
                    android:padding="14dp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:inputType="textMultiLine"
                    android:shadowColor="@color/darker_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/green"
                app:boxStrokeColor="@color/green"
                app:placeholderTextColor="@color/green"
                android:hint="@string/destino"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:textColorHint="@color/black"
                android:visibility="visible">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/destino"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="300"
                    android:padding="14dp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:inputType="textMultiLine"
                    android:shadowColor="@color/darker_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/green"
                app:boxStrokeColor="@color/green"
                app:placeholderTextColor="@color/green"
                android:hint="@string/duracion"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:visibility="visible">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/duracion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="300"
                    android:padding="14dp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:shadowColor="@color/darker_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/green"
                app:boxStrokeColor="@color/green"
                app:placeholderTextColor="@color/green"
                android:hint="@string/distancia"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:textColorHint="@color/black"
                android:visibility="visible">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/distancia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="300"
                    android:padding="14dp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:shadowColor="@color/darker_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/green"
                app:boxStrokeColor="@color/green"
                app:placeholderTextColor="@color/green"
                android:hint="@string/velocidad_media"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="4dp"
                android:textColorHint="@color/black"
                android:visibility="visible">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/velocidadMedia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="300"
                    android:padding="14dp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:shadowColor="@color/darker_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>